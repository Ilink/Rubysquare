/*~~ Type ~~*/
/* I use Andale Mono myself since it's awesome. However, if you don't have a liscense feel free to use something else */

/* Order matters, bold must come AFTER normal */
@font-face {
    font-family: 'AndaleMonoMT';
    src: url('<%= asset_path 'andalemonomtstd-webfont.eot'%>');
    src: url('<%= asset_path 'andalemonomtstd-webfont.eot?#iefix'%>') format('embedded-opentype'),
         url('<%= asset_path 'andalemonomtstd-webfont.woff'%>') format('woff'),
         url('<%= asset_path 'andalemonomtstd-webfont.ttf'%>') format('truetype'),
         url('<%= asset_path 'andalemonomtstd-webfont.svg#AndaleMonoMTStdRegular'%>') format('svg');
    font-weight: normal;
    font-style: normal;
}

@font-face {
    font-family: 'AndaleMonoMT';
    src: url('<%= asset_path 'andalemonomtstd-bold-webfont.eot' %>');
    src: url('<%= asset_path 'andalemonomtstd-bold-webfont.eot?#iefix' %>') format('embedded-opentype'),
         url('<%= asset_path 'andalemonomtstd-bold-webfont.woff'%>') format('woff'),
         url('<%= asset_path 'andalemonomtstd-bold-webfont.ttf'%>') format('truetype'),
         url('<%= asset_path 'andalemonomtstd-bold-webfont.svg#AndaleMonoMTStdBold'%>') format('svg');
    font-weight: bold;
    font-style: normal;
}


body{
    padding:0;
    margin:0;
    font-family:AndaleMonoMT, Verdana, Sans;
    background-color: #fff;
    color: #333;
    font-size: 13px;
    line-height: 18px;
}

#menu ul, li{
    list-style-type: none;
    display:inline;
    margin:0px 3px 0px 3px;
}

ul{
    -webkit-padding-start:0px;
}

ul, li{
    list-style-type: none;
}

.pointer{
    cursor:pointer;
}

.hidden{
    display:none;
}


.header{
    font-size:18px;
}

#seek_bar {
    border: 2px solid black;

}

#page_wrapper{
    width:1060px;
    margin:10px auto;

}

/*~~ Tables ~~*/

tr{
    text-align: left;
}

td{
    padding-right:15px;
}

table {
    width: 100%;
    table-layout:fixed;
}

th.song_locations {
    width:20%;
}

th.actions{
    width:70px;
}

th.actions_long{
    width:160px;
}

.long_td_wrapper{
    overflow:hidden;
}

/*~~ Search ~~*/
