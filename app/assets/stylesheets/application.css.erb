body{
    padding:0;
    margin:0;
    font-family:AndaleMonoMT, Verdana, Sans;
    background-color: #fff;
    color: #333;
    font-size: 13px;
    line-height: 18px;
}

.clearfix{
    clear:both;
}

#menu ul, li{
    list-style-type: none;
    display:inline;
    margin:0px 3px 0px 3px;
}

ul{
    -webkit-padding-start:0px;
}

ul, li{
    list-style-type: none;
}

.pointer{
    cursor:pointer;
}

.hidden{
    display:none;
}

.float_right{
    float:right;
}

.float_left{
    float:left;
}

.header{
    font-size:18px;
}

#seek_bar {
    border: 2px solid black;

}

#page_wrapper{
    width:1060px;
    margin:10px auto;

}

.column_left{
    width:500px;
    float:left;
}

.column_right{
    width:500px;
    float:right;
}

/*~~ Tables ~~*/

tr{
    text-align: left;
}

tr:nth-child(even){
    background-color:#F3F2FF;
}

td{
    padding-right:15px;
}

table {
    width: 100%;
    table-layout:fixed;
    -moz-user-select: none;
    -khtml-user-select: none;
    -webkit-user-select: none;
    user-select: none;
}

th.song_locations {
    width:20%;
}

th.actions{
    width:70px;
}

th.actions_long{
    width:160px;
}

.long_td_wrapper{
    overflow:hidden;
}

/*~~ Search ~~*/
#query {
    width:200px;
    border:2px solid grey;
}

/*~~ Type ~~*/
.bold{
    font-weight:bold;
}
