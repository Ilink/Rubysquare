@font-face {
    font-family: 'Univers';
    src: url('<%= asset_path 'Univers_web/univers.eot'%>');
    src: url('<%= asset_path 'Univers_web/univers.eot'%>?#iefix') format('embedded-opentype'),
         url('<%= asset_path 'Univers_web/univers.woff'%>') format('woff'),
         url('<%= asset_path 'Univers_web/univers.ttf'%>') format('truetype'),
         url('<%= asset_path 'Univers_web/univers.svg'%>#UniversLTRegular') format('svg');
    font-weight: normal;
    font-style: normal;
    text-shadow: 0 0 1px rgba(0,0,0,0.3);
    -webkit-font-smoothing: subpixel-antialiased;

}

@font-face {
    font-family: 'Univers';
    src: url('<%= asset_path 'Univers_web/univers_bold.eot'%>');
    src: url('<%= asset_path 'Univers_web/univers_bold.eot'%>?#iefix') format('embedded-opentype'),
         url('<%= asset_path 'Univers_web/univers_bold.woff'%>') format('woff'),
         url('<%= asset_path 'Univers_web/univers_bold.ttf'%>') format('truetype'),
         url('<%= asset_path 'Univers_web/univers_bold.svg#UniversLTBold%'%>') format('svg');
    font-weight: bold;
    font-style: normal;
    text-shadow: 0 0 1px rgba(0,0,0,0.3);
    -webkit-font-smoothing: subpixel-antialiased;
}


body{
    padding:0;
    margin:0;
    font-family:Univers, AndaleMonoMT, Verdana, Sans;
    background-color: #fff;
    color: #333;
    font-size: 13px;
    line-height: 18px;
}

input {
    /*font-family:Univers, AndaleMonoMT, Verdana, Sans;*/
    font-size:13px;
    padding:3px;
    /*padding-top:10px;*/
}

.clearfix{
    clear:both;
}

#menu ul, li{
    list-style-type: none;
    display:inline;
    margin:0px 3px 0px 3px;
}

ul{
    -webkit-padding-start:0px;
}

ul, li{
    list-style-type: none;
}

.pointer{
    cursor:pointer;
}

.hidden{
    display:none;
}

.float_right{
    float:right;
}

.float_left{
    float:left;
}

.header{
    font-size:18px;
}

#seek_bar {
    border: 2px solid black;

}

#page_wrapper{
    width:1060px;
    margin:10px auto;

}

.column_left{
    width:500px;
    float:left;
}

.column_right{
    width:500px;
    float:right;
}

.title_type{
    font-size:32px !important;
    margin-bottom:8px;
}

/*~~ Tables ~~*/

tr{
    text-align: left;
}

tr:nth-child(even){
    background-color:#F3F2FF;
}

td{
    padding-right:15px;
}

table {
    width: 100%;
    table-layout:fixed;
    -moz-user-select: none;
    -khtml-user-select: none;
    -webkit-user-select: none;
    user-select: none;
}

th.title {
    width:35%;
}

th.song_locations {
    width:20%;
}

th.actions{
    width:70px;
}

th.actions_long{
    width:160px;
}

.long_td_wrapper{
    overflow:hidden;
}

/*~~ Search ~~*/
#query {
    width:200px;
    border:2px solid grey;
}

/*~~ Type ~~*/
.bold{
    font-weight:bold;
}
